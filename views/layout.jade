doctype html
html
  head
    meta(http-equiv="Content-Type", content="text/html,charset=utf-8") 
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    title Purify Life
    block links
        link(rel='stylesheet', href='/css/style.css')
        link(rel='stylesheet', href='/bootstrap/dist/css/bootstrap.css')
    <!--[if IE 7]>
    link(rel='stylesheet',href='/css/ie7.css')
    <![endif]-->
  body
    div.container
        div.col-lg-offset-1.col-lg-10
            block header
                div.header
                    div.row
                        a#logo.col-lg-offset-1.col-md-offset-1(href='/'): img(src='/images/logo.jpg',alt='')
                    div.row
                        hr
                        ul
                            li(class=home): a(href='/') 主页
                            li(class=products): a(href='products') 产品
                            li(class=price): a(href='price') 价格
                            li(class=question): a(href='question') 常见问题
                            li(class=contact): a(href='contact') 联系我们

            block content

            block footer
                div.clearfix
                div.footer.row
                    ul
                        li: a(href='/') 主页
                        li: a(href='products') 产品
                        li: a(href='price') 价格
                        li: a(href='question') 常见问题
                        li: a(href='contact') 联系我们

                    p &#169; Copyright &#169; 2011. All rights reserved

            block scripts
                script(src="/js/jquery.js")
                script(src="http://code.jquery.com/jquery-migrate-1.2.1.js")
                script(src='/bootstrap/dist/js/bootstrap.js')
                script(src='/js/script.js')
